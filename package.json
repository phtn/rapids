{
  "name": "rapids",
  "version": "0.1.0",
  "description": "API Key Generation and Management Service",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --hot index.ts",
    "start": "./dist/rapids",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "bunx tsc --noEmit",
    "lint": "bunx @biomejs/biome check .",
    "lint:fix": "bunx @biomejs/biome check --write .",
    "prebuild": "bun run typecheck && bun run lint",
    "build": "bun build index.ts --compile --outfile dist/rapids",
    "build:linux": "bun build index.ts --compile --target=bun-linux-x64 --outfile dist/rapids-linux-x64",
    "build:linux-arm": "bun build index.ts --compile --target=bun-linux-arm64 --outfile dist/rapids-linux-arm64",
    "build:macos": "bun build index.ts --compile --target=bun-darwin-x64 --outfile dist/rapids-darwin-x64",
    "build:macos-arm": "bun build index.ts --compile --target=bun-darwin-arm64 --outfile dist/rapids-darwin-arm64",
    "build:windows": "bun build index.ts --compile --target=bun-windows-x64 --outfile dist/rapids-windows-x64.exe",
    "build:all": "bun run build:linux && bun run build:linux-arm && bun run build:macos && bun run build:macos-arm && bun run build:windows",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
